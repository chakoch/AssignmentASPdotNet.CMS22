@model IndexViewModel

@if(Model.Showcase != null)
{
    <section class="showcase">
        <div class="container">
            <div class="content">
                <div class="titles">
                    <p class="title-2">WELLCOME TO bmarketo SHOP</p>
                    <p class="title-1">Exclusive Chair gold Collection.</p>
                    <a class="btn btn-theme" asp-controller="@Model.Showcase.NavLink.ControllerName" asp-action="@Model.Showcase.NavLink.ActionName">@Model.Showcase.NavLink.Name</a>
                </div>
            </div>
            <img src="@Model.Showcase.Image.Source" alt="@Model.Showcase.Image.Alt" />
        </div>
    </section>

    <div>
        @if (Model.Products != null)
        {
            foreach (var product in Model.Products)
            {
                        <p>@product.Name - @product.Rating()</p>
            }
        }
    </div>
}